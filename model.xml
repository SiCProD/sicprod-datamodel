        </namespaces>
    </meta>
    <description><p>This is the overall data model for the SiCProD project.</p></description>
    <classes>
        <class ID="person">
            <name>Person</name>
            <definition>
                <p>Persons as used in SiCProD. This is a subclass of <className>crm:E21_Person</className>.</p>    
            </definition>
            <properties>
                <property ID="person.name">
                    <arity>1</arity>
                    <name>Name</name>
                    <datatypeName target="shortText" />
                    <note>This is the surname of a person. To keep consistency with other APIS instances name is used.</note>
                </property>
                <property ID="person.first_name">
                    <arity>1</arity>
                    <name>First Name</name>
                    <datatypeName target="shortText" />
                    <note>This is the given name of a person. To keep consistency with other APIS instances the attribute first_name is used.</note>
                </property>
                <property ID="person.start_date_written">
                    <arity>1</arity>
                    <name>Birth Date</name>
                    <datatypeName target="shortText" />
                    <note>The date of birth of a person.</note>
                </property>
                <property ID="person.end_date_written">
                    <arity>1</arity>
                    <name>Death Date</name>
                    <datatypeName target="shortText" />
                    <note>The date of death of a person.</note>
                </property>
                <property ID="person.gender">
                    <arity>1</arity>
                    <name>Gender</name>
                    <datatypeName target="choiceField" />
                    <note>The gender of a person.</note>
                </property>
                <property ID="person.class_affiliation">
                    <arity>1</arity>
                    <name>Class Affiliation</name>
                    <datatypeName target="choiceField" />
                    <note>The class affiliation of a person.</note>
                </property>
                <property ID="person.alternative_label">
                    <arity>1</arity>
                    <name>Alternative Label</name>
                    <datatypeName target="shortText" />
                    <note>An alternative label for a person.</note>
                </property>
            </properties>
            <mapping targetLanguage="crm">
                <className uri="http://www.cidoc-crm.org/cidoc-crm/E21_Person">crm:E21_Person</className>
                <note>Person for SiCProD should sublass E21_Person rather than use a owl:sameAs link</note>
            </mapping>
        </class>
